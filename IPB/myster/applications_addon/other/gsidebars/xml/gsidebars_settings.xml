    <setting>
      <conf_title>Disable on Skins</conf_title>
      <conf_description><![CDATA[Select on which skins mod won't be active at all.]]></conf_description>
      <conf_group>32</conf_group>
      <conf_type>multi</conf_type>
      <conf_key>dp3_gs_disabled_skins</conf_key>
      <conf_default/>
      <conf_extra/>
      <conf_evalphp><![CDATA[$key = 'dp3_gs_disabled_skins';

if ( $save == 1 )
{
	if ( is_array( $_POST[ $key ] ) )
	{
		$_POST[ $key ] = implode(',', $_POST[ $key ] );
	}
	else
	{
		$_POST[ $key ] = '';
	}
}

if ( $show == 1 )
{
	/* Excluded fields */

    $fields		= $this->cache->getCache( 'skinsets' );
	
	foreach( $fields as $field )
	{			
		$dropdown[]	= array( $field['set_key'], $field['set_name'] );
	}
	
	$key = 'dp3_gs_disabled_skins[]';
}]]></conf_evalphp>
