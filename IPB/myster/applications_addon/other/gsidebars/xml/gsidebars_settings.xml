      <conf_title>Always Show Global Sidebar?</conf_title>
      <conf_description>Do you want to display global sidebar always before customized section sidebar? If not, then global sidebar will be displayed only on the public board page.</conf_description>
      <conf_group>32</conf_group>
      <conf_type>yes_no</conf_type>
      <conf_key>dp3_gsidebars_display_global</conf_key>
      <conf_default>1</conf_default>
      <conf_extra/>
      <conf_evalphp/>
      <conf_protected>1</conf_protected>
      <conf_position>2</conf_position>
      <conf_start_group/>
      <conf_add_cache>1</conf_add_cache>
      <conf_keywords/>
      <conf_title_keyword>dp3_gsidebars</conf_title_keyword>
      <conf_is_title>0</conf_is_title>
    </setting>
    <setting>
      <conf_title>Integrate with (DP32) Advanced Adverts?</conf_title>
      <conf_description><![CDATA[Do you want to have ability to add predefined adverts to the sidebars?<!--INFO-->]]></conf_description>
      <conf_group>32</conf_group>
      <conf_type>yes_no</conf_type>
      <conf_key>dp3_gsidebars_integrate</conf_key>
      <conf_default>0</conf_default>
      <conf_extra/>
      <conf_evalphp><![CDATA[if( $show == 1 )
{
	$appsCache = ipsRegistry::cache()->getCache('app_cache');
	if( ! $appsCache['advadverts'] || ! $appsCache['advadverts']['app_enabled'] )
	{
	$r['conf_description'] = str_replace( "<!--INFO-->", "<br /><br ><span style='font-size:13px;color:red;font-weight:bold;'>(DP32) Advanced Adverts isn't installed OR enabled!</span> <a href='http://community.invisionpower.com/files/file/2860-dp30-advanced-adverts/' style='font-size:13px;' target='_blank' title='Go to IPS Market Place and buy this application, before enable it.'>BUY IT</a>", $r['conf_description'] );
	}
}]]></conf_evalphp>
      <conf_protected>1</conf_protected>
      <conf_position>2</conf_position>
      <conf_start_group/>
      <conf_add_cache>1</conf_add_cache>
      <conf_keywords/>
      <conf_title_keyword>dp3_gsidebars</conf_title_keyword>
