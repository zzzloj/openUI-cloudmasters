    <template>
      <template_group>skin_portal</template_group>
      <template_content><![CDATA[<div class="ipsSideBlock">
	<h3>{$this->lang->words['newest_posts']}</h3>
	<ul class="ipsList_withminiphoto">
		<if test="recentposts:|:is_array( $rows ) && count( $rows )">
			<foreach loop="posts_hook:$rows as $r">
				<li class="clearfix">
					<a href="{parse url="showuser={$r['author']['member_id']}" seotitle="{$r['author']['members_seo_name']}" template="showuser" base="public"}" title="{$this->lang->words['view_profile']}" class="ipsUserPhotoLink left">
						<img src="{$r['author']['pp_mini_photo']}" alt="{$r['author']['members_display_name']}{$this->lang->words['photo']}" class="ipsUserPhoto ipsUserPhoto_mini" />
					</a>
					<div class="list_content">
						<a href="{parse url="showtopic={$r['tid']}&amp;view=findpost&amp;p={$r['pid']}" base="public" template="showtopic" seotitle="{$r['title_seo']}"}" rel="bookmark" class="ipsType_small" title="{$this->lang->words['view_topic']}">{$r['title']}</a>
						<p class="desc ipsType_smaller">
							{IPSMember::makeProfileLink( IPSMember::makeNameFormatted( $r['author']['members_display_name'], $r['author']['member_group_id'] ), $r['author']['member_id'], $r['author']['members_seo_name'] )}
							- {parse date="$r['post_date']" format="short"}
						</p>
					</div>
					<p class="desc ipsType_smaller ipsComment">
						{parse expression="IPSText::truncate( $r['post'], $this->settings['portal_NewPostsChars'] )"}
					</p>
				</li>
			</foreach>
		<else />
			<li><em>{$this->lang->words['norecent_posts']}</em></li>
		</if>
	</ul>
</div>]]></template_content>
