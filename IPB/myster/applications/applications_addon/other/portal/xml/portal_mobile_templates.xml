      <template_content><![CDATA[<div class='master_list'>

    <foreach loop="articles:$articles as $topic">

	<h2 class='title'>
		<a href='{parse url="showtopic={$topic['tid']}" base="public" seotitle="{$topic['title_seo']}" template="showtopic"}'>{IPSText::truncate( $topic['title'], intval( $this->settings['portal_topic_title_truncate'] ) )}</a>
	</h2>

        <div class='topic_reply' id='entry{$topic['tid']}'>

